{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "region": {
            "type": "string",
            "defaultValue": "westus"
        }
    },
    "variables": {
        "location": "[parameters('region')]",
        "databaseName": "movies",
        "throughput": "400",
        "name-suffix": "[uniqueString(resourceGroup().id)]",
        "cosmosDbAccountName": "[concat('s2cosmosdb', variables('name-suffix'))]"
    },
    "resources": [
        {
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "apiVersion": "2020-03-01",
            "name": "[variables('cosmosDbAccountName')]",
            "location": "[variables('location')]",
            "kind": "GlobalDocumentDB",
            "properties": {
                "publicNetworkAccess": "Enabled",
                "enableAutomaticFailover": false,
                "enableMultipleWriteLocations": false,
                "isVirtualNetworkFilterEnabled": false,
                "virtualNetworkRules": [],
                "disableKeyBasedMetadataWriteAccess": false,
                "databaseAccountOfferType": "Standard",
                "consistencyPolicy": {
                    "defaultConsistencyLevel": "Session",
                    "maxIntervalInSeconds": 5,
                    "maxStalenessPrefix": 100
                },
                "capabilities": [
                    {
                        "name": "EnableStorageAnalytics"
                    }
                ],
                "locations": [
                    {
                        "locationName": "[variables('location')]",
                        "provisioningState": "Succeeded",
                        "failoverPriority": 0,
                        "isZoneRedundant": false
                    }
                ]
            }
        },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases",
            "name": "[concat(variables('cosmosDbAccountName'), '/', variables('databaseName'))]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts', variables('cosmosDbAccountName'))]" ],
            "properties":{
                "resource":{
                    "id": "[variables('databaseName')]"
                },
                "options": {}
            }
	    },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
            "name": "[concat(variables('cosmosDbAccountName'), '/', variables('databaseName'), '/', 'object')]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', variables('cosmosDbAccountName'), variables('databaseName'))]" ],
            "properties":
            {
                "resource":{
                    "id":  "object",
                    "partitionKey": {
                        "paths": [
                        "/partitionKey"
                        ],
                        "kind": "Hash"
                    }
                },
                "options": {}
            }
	    },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
            "name": "[concat(variables('cosmosDbAccountName'), '/', variables('databaseName'), '/', 'events')]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', variables('cosmosDbAccountName'), variables('databaseName'))]" ],
            "properties":
            {
                "resource": {
                    "id": "events",
                    "indexingPolicy": {
                        "indexingMode": "Consistent",
                        "includedPaths": [
                            {
                                "path": "/event/?"
                            }
                        ],
                        "excludedPaths": [
                            {
                                "path": "/*"
                            }
                        ]
                    },
                    "partitionKey": {
                        "paths": [
                            "/userId"
                        ],
                        "kind": "Hash"
                    }
                },
                "options": { "Throughput": "10000" }
            }
	    },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
            "name": "[concat(variables('cosmosDbAccountName'), '/', variables('databaseName'), '/', 'associations')]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', variables('cosmosDbAccountName'), variables('databaseName'))]" ],
            "properties":
            {
                "resource": {
                    "id": "associations",
                    "partitionKey": {
                        "paths": [
                            "/source"
                        ],
                        "kind": "Hash"
                    }
                },
                "options": {  }
            }
	    },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
            "name": "[concat(variables('cosmosDbAccountName'), '/', variables('databaseName'), '/', 'similarity')]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', variables('cosmosDbAccountName'), variables('databaseName'))]" ],
            "properties":
            {
                "resource": {
                    "id": "similarity",
                    "partitionKey": {
                        "paths": [
                            "/sourceItemId"
                        ],
                        "kind": "Hash"
                    }
                },
                "options": {  }
            }
	    },
        {
            "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
            "name": "[concat(variables('cosmosDbAccountName'), '/', variables('databaseName'), '/', 'ratings')]",
            "apiVersion": "2019-08-01",
            "dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', variables('cosmosDbAccountName'), variables('databaseName'))]" ],
            "properties":
            {
                "resource": {
                    "id": "ratings",
                    "partitionKey": {
                        "paths": [
                            "/userId"
                        ],
                        "kind": "Hash"
                    }
                },
                "options": {  }
            }
	    }
    ],
    "outputs": {
        "hash": {
            "type": "string",
            "value": "[variables('name-suffix')]"
        }
    }
}